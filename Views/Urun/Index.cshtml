@using dotnet_store.Models
@model List<Urun>

@{
    ViewData["Title"] = "Ürün Listesi";
}

<div class="container mt-4">
    <h2 class="mb-4">Ürün Listesi</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@item.ProductName</h5>
                            <p class="card-text text-muted">@item.Yazar</p>
                            <p class="card-text">@item.FullDescription?.Substring(0, Math.Min(100, item.FullDescription.Length))...</p>
                            
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="badge bg-primary">@item.Marka</span>
                                <span class="badge bg-secondary">@item.MedyaTipi</span>
                            </div>
                            
                            <div class="mt-3">
                                <div class="d-flex justify-content-between">
                                    <span class="h5 text-success">@item.Fiyat.ToString("C")</span>
                                    <span class="text-muted">Stok: @item.StockQuantity</span>
                                </div>
                                
                                @if (item.TotalRating > 0)
                                {
                                    <div class="mt-2">
                                        <small class="text-warning">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                if (i <= item.TotalRating)
                                                {
                                                    <i class="fas fa-star"></i>
                                                }
                                                else
                                                {
                                                    <i class="far fa-star"></i>
                                                }
                                            }
                                            (@item.TotalRating.ToString("F1"))
                                        </small>
                                    </div>
                                }
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <a href="@Url.Action("Details", new { id = item.Id })" class="btn btn-outline-primary btn-sm w-100">
                                Detayları Gör
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Ürün bulunamadı</h4>
            <p class="text-muted">Henüz hiç ürün eklenmemiş.</p>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Bootstrap alert'lerini otomatik kapat
        setTimeout(function() {
            $('.alert').alert('close');
        }, 5000);
    </script>
}