@model List<dotnet_store.Models.Urun>
@{
 ViewData["Title"] = "Anasayfa";
}

@section Bar{
    @await Html.PartialAsync("Partials/_Navbar")
}

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger" role="alert">
        <h4>Veritabanı Bağlantı Hatası</h4>
        <p>@ViewBag.Error</p>
    </div>
}
else
{
    <section class="mt-3">
        <div class="container">
            <div class="card">
                <div class="row p-1 p-lg-2 gx-2">
                    <div class="col-lg-3 d-none d-lg-block">
                        @await Html.PartialAsync("Partials/_Menu")
                    </div>
                    <div class="col-lg-9">
                        @await Html.PartialAsync("Partials/_Slider")
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="mt-3">
        <div class="container">
            <h3 class="h4 mb-1 mb-lg-3">Son Eklenenler (@Model.Count ürün)</h3>

            @if (Model != null && Model.Count > 0)
            {
                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-2">
                    @foreach (var urun in Model)
                    {
                        <div class="col">
                            @await Html.PartialAsync("Partials/_UrunCard", urun)
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <p>Henüz ürün bulunmuyor.</p>
                </div>
            }
        </div>
    </section>
}

